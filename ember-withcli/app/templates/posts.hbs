<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <table class='table'>
        <thead>
          <tr><th>Recent Posts</th></tr>
        </thead>
        {{#each}}
          <tr>
            <td>{{#link-to 'post' this}}{{{title}}}{{/link-to}} <small class='text-muted'>by {{author.name}}</small></td>
          </tr>
        {{/each}}
      </table>
    </div>
    <div class="col-md-9">
      {{outlet}}
    </div>
  </div>
</div>
